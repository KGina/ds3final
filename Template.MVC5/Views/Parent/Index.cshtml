@model IEnumerable<AbantwanaWebMaster.Model.ParentView>

@{
    //Layout = null;
    ViewBag.Title = "Index";

}

<html>
<head>
    @using GridMvc.Html
    @{
        var grid = new WebGrid(Model);
    }

    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
    @*@*<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />*@
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>


    @*<link href="~/Content/bootstrap.css" rel="stylesheet" />
        <link href="~/Content/Gridmvc.css" rel="stylesheet" />
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/gridmvc.min.js"></script>

        <link href="~/Content/viewlight.css" rel="stylesheet" />*@



    <style>
        .webgrid-table {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            font-size: 1.2em;
            width: 100%;
            display: table;
            border-collapse: separate;
            border: solid 1px #98BF21;
            background-color: white;
        }

            .webgrid-table td, th {
                border: 1px solid #98BF21;
                padding: 3px 7px 2px;
            }
    </style>
</head>
<body>
    <center>

        <div style="background-color:whitesmoke; height:37px;width:85% ;font-size:15px;">

            <h2> Parent list </h2>

        </div>

        <div class="card shadow mb-4" style="background-color:aliceblue; width:85%; top:auto">
            <div class="card-header ">
                <p>
                    <div class="btn-group">
                        <a class="btn btn-send" href="@Url.Action("Index", "Parent")">
                            <i class="fad fa fa-home"></i>
                            Home
                        </a>
                    </div>
                    <div class="btn-group">
                        <a class="btn btn-success" href="@Url.Action("Create", "Parent")">
                            <i class="fad fa-file-alt"></i>
                            Add New Parent
                        </a>
                    </div>
                </p>

                @*<div class="table-responsive">*@
                <table class="table table-bordered" id="dataTable" width="100" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayName("Name")
                            </th>

                            <th>
                                @Html.DisplayName("Surname")
                            </th>
                            <th>
                                @Html.DisplayName("Phone Number")
                            </th>
                            <th>
                                @Html.DisplayName("Physical Address")
                            </th>
                            <th>
                                @Html.DisplayName("Email")
                            </th>

                            <th>
                                @Html.DisplayName("ID Document")
                            </th>
                            <th>
                                @Html.DisplayName("Proof Of Residence")
                            </th>
                            <th>
                                @Html.DisplayName("Verification")
                            </th>
                            <th>
                                @Html.DisplayName("Add New")
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.surname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.phonenumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.physicaladdress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.emailaddress)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-primary" href="@Url.Action("OpenPDFIdDoc", "parent", new { id=item.parentid },null)" title="Bootstrap 3 themes generator">
                                        <span class="icon_lightbulb_alt"></span>
                                        View Pdf
                                    </a>
                                </div>
                            </td>

                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-primary" href="@Url.Action("OpenPDFIdDoc", "parent", new { id=item.parentid },null )" title="Bootstrap 3 themes generator">
                                        <span class="icon_lightbulb_alt"></span>
                                        View  Pdf
                                    </a>
                                </div>
                            </td>



                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-success" href="@Url.Action("Index", "Learnerprofile", new { id=item.parentid },null)">
                                        <span class="icon_lightbulb_alt"></span>
                                        Verify Child Info.
                                    </a>

                                </div>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-success" href="@Url.Action("Create", "Learnerprofile", new { email=item.emailaddress },null)">
                                        <span class="icon_lightbulb_alt"></span>
                                        Add New Leaner
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }

                    @*</tbody>*@
                </table>

            </div>




        </div>
        </div>

    </center>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Gridmvc.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/gridmvc.min.js"></script>

</body>
</html>









