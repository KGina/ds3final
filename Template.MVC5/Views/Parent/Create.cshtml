                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.homephonenumber, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.homephonenumber, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <b>All documents are required</b><u style="color:blue"></u>(Must be certified and not older than 3months)
                            <h4>

                                <div class="form-group">
                                    @*@Html.LabelFor(model => model.proofofresidence, htmlAttributes: new { @class = "control-label col-md-2" })*@
