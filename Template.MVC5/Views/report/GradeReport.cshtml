@model IEnumerable<AbantwanaWebMaster.Model.gradeReport>
@{
    ViewBag.Title = "IndexById";
    Layout = null;
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")


<html>
<head>
    <style>

        h3, h2 {
            text-align: center;
        }

        body {
            background-color: antiquewhite;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        p.dashed {
            border-style: dashed;
        }
    </style>
</head>
<body>





    @foreach (var item in Model)
    {
        <div>
            @*<h2><img src="~/Images/basiceducation.jpg" alt="School Logo" style="width:500px;height:100px;"></h2>*@
            <img src="~/Images/logo2.png" alt="School Logo" style="width:100%;">
            <h2><img src="~/Images/logos.png" alt="School Logo" style="width:100%;height:150px;"></h2>

            <h3><b>Abantwana Day Care</b> </h3>
            <h3> 2019 grade Report</h3>

             <table class="table table-bordered table-condensed table-striped">
                <tr>
                    <td>Grade Name :</td>
                    <td>@item.gradeName</td>
                </tr>

                <tr>
                    <td>Term :</td>
                    <td>@item.term</td>

                </tr>
                <tr>
                    <td>Date Created :</td>
                    <td>@item.dateGenerated</td>

                </tr>
                @*<tr>
                        <td>Grade :</td>
                        <td>@item.grade</td>

                    </tr>*@

                @*<img src="img_girl.jpg" alt="Girl in a jacket" style="width:500px;height:600px;">*@

            </table>
            <table class="table table-bordered table-condensed table-striped">
                <tr>
                    <td>
                        <table class="table table-bordered table-condensed table-striped">


                            <tr>
                                <td>Subject Name</td>
                                <td>Pass Rate</td>
                                <td>Fail Rate</td>
                                <td>Average</td>
                                @*<td>@Model.Salary</td>*@
                            </tr>
                            @foreach (var ite in item.gradeSubjects)
                            {
                                <tr>
                                    <td>@ite.Name</td>
                                    <td>@ite.passRate</td>
                                    <td>@ite.failRate</td>
                                    <td>@ite.average</td>
                                    @*<td>@Model.HRA</td>*@
                                </tr>
                            }

                        </table>
                    </td>
                </tr>

                @*<tr>
                        <td>Result : @item.results</td>
                    </tr>*@

            </table>
            <br>


        </div>
    }
</body>
</html>
