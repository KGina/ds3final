@model IEnumerable<AbantwanaWebMaster.Model.Grade>

@{
    ViewBag.Title = "Terms";
}



<html>
<head>
    @using GridMvc.Html
    @{
        var grid = new WebGrid(Model);
    }

    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
    @*@*<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />*@
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>


    <style>
        .webgrid-table {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            font-size: 1.2em;
            width: 100%;
            display: table;
            border-collapse: separate;
            border: solid 1px #98BF21;
            background-color: white;
        }

            .webgrid-table td, th {
                border: 1px solid #98BF21;
                padding: 3px 7px 2px;
            }
    </style>
</head>
<body>
    <center>
        <div style="background-color:whitesmoke; height:37px;width:85% ;font-size:15px;">

            <h2> List Of Grades</h2>

        </div>

        <div class="card shadow mb-4" style="background-color:aliceblue; width:85%">
            <div class="card-header ">
                <p>
                    <div class="btn-group">
                        <a class="btn btn-send" href="@Url.Action("GradeIndex", "Assessment")">
                            <i class="fad fa fa-home"></i>
                            Home
                        </a>
                    </div>
                   
                </p>


            </div>

            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.gradeName)
                    </th>
                    <th>Subjects</th>
                </tr>
            

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.gradeName)
                        </td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary" href="@Url.Action("GradeSubjectIndex", "Subject", new { gradeId=item.gradeId },null)">
                                    <span class="icon_lightbulb_alt"></span>
                                    Grade Subjects
                                </a>
                            </div>
                        </td>
                    </tr>
                }

            </table>

        </div>


    </center>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Gridmvc.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/gridmvc.min.js"></script>

</body>
</html>




