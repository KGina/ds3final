@model AbantwanaWebMaster.Model.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>ONSKOOL Login</title>
    <!-- Custom fonts for this template-->
    <!-- <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css"> -->
    <!-- <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet"> -->
    <!-- Custom styles for this template-->
    <link href="~/Content/assets2/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-primary">
    <div style="margin-bottom:10%;"></div>
    <div class="container">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <!-- Outer Row -->
            <div class="row justify-content-center">
                <div class="col-xl-10 col-lg-12 col-md-9">
                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div class="row">

                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                        </div>
                                        <form class="user">
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control form-control-user" } })
                                                <p class="help-block">@Html.ValidationMessageFor(m => m.UserName)</p>
                                            </div>
                                            <div class="form-group">
                                                @Html.PasswordFor(m => m.Password, new { htmlAttributes = new { @class = "form-control form-control-user" } })
                                                <p class="help-block">@Html.ValidationMessageFor(m => m.Password)</p>
                                            </div>
                                            <div class="form-group">
                                                <div class="custom-control">
                                                    @Html.CheckBoxFor(m => m.RememberMe, new { htmlAttributes = new { @class = "custom-control custom-checkbox small" } })Remember Me

                                                </div>
                                            </div>
                                            <button id="Log In" name="Log In" class="btn btn-primary btn-user btn-block">
                                                Login
                                            </button>
                                            <hr>

                                        </form>

                                        <hr>
                                        <div class="text-center">
                                            <a class="small">
                                                <p>
                                                    @Html.ActionLink("Forgot your password?", "ForgotPassword")

                                                </p>
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/assets2/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/assets2/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Content/assets2/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/Content/assets2/js/sb-admin-2.min.js"></script>
</body>
</html>
