@model IEnumerable<AbantwanaWebMaster.Model.LearnerProfileView>

@{
    ViewBag.Title = "Index";
}


<html>
<head>
    @using GridMvc.Html
    @{
        var grid = new WebGrid(Model);
    }

    <meta name="viewport" content="width=device-width" />
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
