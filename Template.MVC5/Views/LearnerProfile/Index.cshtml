                                        <li>

                                            <a href=@Url.Action("Reject", "LearnerProfile", new { pId=item.learnerId })> Reject</a>
                                        </li>
                                        <li>

                                            <a href=@Url.Action("SendEmail", "LearnerProfile", new { pId=item.learnerId })> Inteview</a>
                                        </li>
                                        <li class="divider"></li>
                                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Send Email</a></li>
                                    </ul>
                                </div>
