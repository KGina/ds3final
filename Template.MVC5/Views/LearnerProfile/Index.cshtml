    <style>
        .webgrid-table {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            font-size: 1.2em;
            width: 100%;
            display: table;
            border-collapse: separate;
            border: solid 1px #98BF21;
            background-color: white;
        }

            .webgrid-table td, th {
                border: 1px solid #98BF21;
                padding: 3px 7px 2px;
            }
    </style>
</head>
<body>
    <center>

        <div style="background-color:whitesmoke; height:37px;width:85% ;font-size:15px;">

            <h2> Learners list </h2>

        </div>

        <div class="card shadow mb-4" style="background-color:aliceblue; width:85%;font-size:12px; top:auto">
            <div class="card-header ">

                @*<div style="background-color:white; height:50px; font-size:25px;">
                <i class="fa fa-home">
                    <a href="@Url.Action("Index", "LearnerProfile")">
                        Home
                    </a>
                </i>
                <i class="fa fa-desktop">
                    <a href="@Url.Action("Create", "LearnerProfile")">
                        New
                    </a>
                </i>
            </div>
        </div>*@

                <p>
                    <div class="btn-group">
                        <a class="btn btn-send" href="@Url.Action("Index", "LearnerProfile")">
                            <i class="fad fa fa-home"></i>
                            Home
                        </a>
                    </div>
                    <div class="btn-group">
                        <a class="btn btn-success" href="@Url.Action("Create", "LearnerProfile")">
                            <i class="fad fa-file-alt"></i>
                            Add New Learner
                        </a>
                    </div>
                </p>




                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Picture)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.lname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.lsurname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.lidnumber)
                        </th>

                        <th>
                            @Html.DisplayName("Grade Applied For")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.medicalCertificate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BirthCertificate)
                        </th>
                        <th>Option</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@Url.Action("UserPhotos", "LearnerProfile", new { learnerId = item.learnerId })" height="48" width="48" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.lname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.lsurname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.lidnumber)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.grade)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.status)
                            </td>


                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-primary" href="@Url.Action("OpenPDFIdDoc", "LearnerProfile", new { id=item.learnerId },null)">
                                        <span class="icon_lightbulb_alt"></span>
                                        View Pdf
                                    </a>
                                </div>
                            </td>


                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-primary" href="@Url.Action("OpenPDFMedDoc", "LearnerProfile", new { id=item.learnerId },null)">
                                        <span class="icon_lightbulb_alt"></span>
                                        View Pdf
                                    </a>
                                </div>
                            </td>

                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-success" href="">
                                        <span class="icon_lightbulb_alt"></span>
                                        Options
                                    </a>
                                    <a class="btn btn-warning dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="@Url.Action("Approve", "LearnerProfile", new { pId = item.learnerId })">Approve</a></li>
